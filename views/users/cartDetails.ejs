<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Détails du Panier</title>
    <link rel="stylesheet" href="/styles/cartDetails.css" />
  </head>
  <body>
    <%- include('../partials/navbar.ejs') %>

    <h1>Détails du Panier</h1>
    <div class="container cart-container">
      <div class="cart-items">
        <% if (user.cart.length === 0) { %>
        <p>Le panier est vide.</p>
        <% } else { %>
        <ul class="cart-items-list">
          <% user.cart.forEach(item => { %>
          <li class="cart-item">
            <div class="item-details">
              <h2><%= item.name %></h2>
              <p><strong>Description:</strong> <%= item.description %></p>
              <p><strong>Prix:</strong> <%= item.price %> €</p>
            </div>
            <div class="quantity-controls">
              <input type="number" min="1" max="<%= item.stock%>" />
              <button class="quantity-control-btn increment">+</button>
              <button class="quantity-control-btn decrement">-</button>
            </div>
          </li>
          <% }); %>
        </ul>
        <% } %>
      </div>

      <div class="cart-summary">
        <h2>Résumé du Panier</h2>
        <p>Total d'articles: 18</p>
        <p>Total du Panier: 45 €</p>
      </div>
    </div>

    <script></script>
  </body>
</html>
